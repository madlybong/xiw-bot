{
  "name": "xiw-bot",
  "version": "1.4.0",
  "module": "src/server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:ui": "vite dev",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:ui\"",
    "build:ui": "bunx --bun vite build",
    "embed": "bun scripts/embed-assets.ts",
    "build:server": "bun build --compile src/server/index.ts --outfile bin/bot-server",
    "build": "bun run build:ui && bun run embed && bun run build:server",
    "release": "bun scripts/release.ts",
    "sync": "bun scripts/auto_sync.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/qrcode": "^1.5.6",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.2.1",
    "sass": "^1.77.0",
    "typescript": "~5.6.2",
    "vite": "^5.3.4",
    "vite-plugin-vuetify": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mdi/font": "^7.4.0",
    "@whiskeysockets/baileys": "^6.7.9",
    "hono": "^4.11.1",
    "jimp": "^1.6.0",
    "link-preview-js": "^4.0.0",
    "pino": "^10.1.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "roboto-fontface": "*",
    "sharp": "^0.34.5",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "vuetify": "^3.5.0"
  }
}