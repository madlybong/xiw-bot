{
  "name": "xiw-bot",
  "version": "1.2.0",
  "module": "src/server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:server": "bun run --watch src/server/index.ts --dev",
    "dev:ui": "cd src/ui && bun run dev",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:ui\"",
    "build:ui": "cd src/ui && bun run build",
    "embed": "bun src/scripts/embed-assets.ts",
    "build": "bun run build:ui && bun run embed && bun build --compile src/server/index.ts --outfile bin/bot-server && cp public.key bin/",
    "release": "bun src/scripts/release.ts",
    "sync": "bun src/scripts/auto_sync.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/qrcode": "^1.5.6",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.9",
    "hono": "^4.11.1",
    "jimp": "^1.6.0",
    "link-preview-js": "^4.0.0",
    "pino": "^10.1.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.34.5"
  }
}